@{
    ViewBag.Title = "theInterviewLoop.com - Let's take an Interview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="content">
        <div class="demo">

            <h2 class="demoHeaders">Interview</h2>

            <div class="row">
                <div class="col-md-12">
                    <section id="forms">
                        <form class="form-inline" role="form">
                            <div class="form-group">
                                <label class="sr-only" for="inputFirstName">First Name</label>
                                <input class="form-control" id="inputFirstName" type="text" placeholder="Enter First Name">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="inputLastName">Last Name</label>
                                <input class="form-control" id="inputLastName" type="text" placeholder="Last Name">
                            </div>
                        </form>
                        <br />
                        <br />
                        <form class="form-inline" role="form">
                            <div class="form-group">
                                <label class="sr-only" for="inputLoopEmails">Interviewer Emails</label>
                                <input class="form-control" id="inputLoopEmails" type="email" placeholder="Interviewer Emails" />
                            </div>
                        </form>
                    </section>
                </div>
                <div class="span3">
                    <h1 id="timertxt"></h1>
                </div>
            </div>


            <button id="add_tab" class="btn btn-primary">Add Question</button>
            <button id="doneButton" class="btn btn-success">Close Interview</button>
            <br>
            <br>

            <ul id="myTabList" class="nav nav-tabs">
                <li class="active">
                    <a href="#tab0" data-toggle="tab">Question 1</a>
                </li>
            </ul>

            <div id="myTabContent" class="tab-content">
                <div class="tab-pane active" id="tab0">
                    <p>Enter your notes on this question here</p>
                    <p>Question:</p>
                    <textarea id="question-0" class="form-control" rows="3"></textarea>
                    <br>
                    <p>Answer:</p>
                    <textarea id="answer-0" class="form-control" rows="9"></textarea>
                </div>
            </div>


            @*<br />
                <br />
                <button id="submit_feedback" class="btn btn-success">Submit Feedback</button>*@

        </div>

        <!-- Button to trigger modal -->
        <a href="#myModal" role="button" class="btn" data-toggle="modal">Launch demo modal</a>

        <!-- Modal -->
        <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="myModalLabel">Login or Register</h3>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="control-group">
                        <label class="control-label" for="inputEmail">Email</label>
                        <div class="controls">
                            <input type="text" id="inputEmail" placeholder="Email">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputPassword">Password</label>
                        <div class="controls">
                            <input type="password" id="inputPassword" placeholder="Password">
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <label class="checkbox">
                                <input type="checkbox"> Remember me
                            </label>
                            <button type="submit" class="btn">Log in</button>
                        </div>
                    </div>
                </form>
                <button class="btn btn-large btn-block" type="button">Log in with Google</button>
                <button class="btn btn-large btn-block" type="button">Log in with Facebook</button>
            </div>
            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                <button class="btn btn-primary">Save changes</button>
            </div>
        </div>

    </div>
</div>

